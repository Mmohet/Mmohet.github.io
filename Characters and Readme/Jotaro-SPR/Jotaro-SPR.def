; 人物信息
[Info]
name = "Jotaro-SPR"        ;人物名
displayname = "Jotaro-SPR" ;显示名
versiondate = 09,01,2012    ;人物版本号 (月-日-年 或者 X.XX)
mugenversion = 1.1          ;人物对应的MUGEN版本 (X.XX)
author = "MOHET"         ;作者名
pal.defaults = 1,2,3,4      ;默认色表顺序 (最多4个)
                            ;序号从1开始
localcoord = 320,240        ;分辨率宽度和高度

; 人物文件
[Files]
cmd     = Jotaro-SPR.cmd    ;操作输入
cns     = Jotaro-SPR.cns    ;常量定义
st      = Jotaro-SPR.cns    ;State定义
stcommon= common1.cns       ;公用(常态)state (人物文件夹或者common文件夹中)
st1     = super.cns         ;技能
st2     = -2.cns            ;开关
st3     = -3.cns            ;对策&时停
st4     = addon.cns         ;附加（简称有的没的（）
sprite  = Jotaro-SPR.sff    ;图像文件
anim    = Jotaro-SPR.air    ;动作文件
sound   = Jotaro-SPR.snd    ;声效文件
pal1 = 3.act
pal2 = 1.act
pal3 = 2.act




; 将选人时的按键对应到色表上
[Palette Keymap]
a = 1 
b = 2
c = 3
x = 4
y = 5
z = 6
a2 = 7
b2 = 8
c2 = 9
x2 = 10
y2 = 11
z2 = 12

; arcade模式的开头结局动画
[Arcade]
;intro.storyboard = intro.def
;ending.storyboard = ending.def


